{
  "name": "dnasubway-tophat-singularity-stampede",
  "version": "2.0.11.1",
  "helpURI": "http://tophat.cbcb.umd.edu/",
  "label": "DNASubway TopHat",
  "defaultQueue": "normal",
  "defaultMaxRunTime": "24:00:00",
  "defaultNodeCount":1,
  "defaultProcessorsPerNode":16,
  "defaultMemoryPerNode":"16GB",
  "shortDescription": "A spliced read mapper for RNA-Seq",
  "executionSystem": "tacc-stampede-vaughn",
  "executionType": "HPC",
  "parallelism": "SERIAL",
  "deploymentPath": "vaughn/applications/dnasubway/container/assets",
  "deploymentSystem": "data.iplantcollaborative.org",
  "templatePath": "wrap-tophat.sh",
  "testPath": "test-tophat.sh",
  "tags": [
    "next-gen",
    "aligner",
    "rnaseq",
    "dnasubway",
    "greenline"
  ],
  "ontology": [ "http://edamontology.org/topic_0091", "http://edamontology.org/operation_0282"],
  "modules": [],
  "inputs": [
    {
      "id": "annotation",
      "details": {
        "label": "Reference annotation",
        "showAttribute": false
      },
      "semantics": {
        "minCardinality": 1,
        "ontology": [
          "http://sswapmeet.sswap.info/util/Annotation"
        ],
        "fileTypes": [
          "gtf-0"
        ]
      },
      "value": {
        "default": "agave://data.iplantcollaborative.org/shared/iplant_DNA_subway/genomes/arabidopsis_thaliana/annotation.gtf",
        "visible": true,
        "required": false,
        "order":4
      }
    },
    {
      "id": "query1",
      "details": {
        "label": "FASTQ sequence library 1",
        "showAttribute": false
      },
      "semantics": {
        "minCardinality": 1,
        "ontology": [
          "http://sswapmeet.sswap.info/util/Sequence"
        ],
        "fileTypes": [
          "fastq-0"
        ]
      },
      "value": {
        "default": "agave://data.iplantcollaborative.org/shared/iplant_DNA_subway/sample_data/fastq/arabidopsis_thaliana/WT_rep1.fastq.gz",
        "required": true,
        "visible": true,
        "order":1
      }
    },
    {
      "id": "genome",
      "details": {
        "label": "Reference genome",
        "description":"A tar file generated by the dnalc-tophat-refprep app",
        "showAttribute": false
      },
      "semantics": {
        "minCardinality": 1,
        "ontology": [
          "http://sswapmeet.sswap.info/mime/application/X-tar"
        ],
        "fileTypes": [
          "tar-0"
        ]
      },
      "value": {
        "default": "agave://data.iplantcollaborative.org/shared/iplant_DNA_subway/genomes/arabidopsis_thaliana/genome.tgz",
        "required": true,
        "visible": true,
        "order":0
      }
    },
    {
      "id": "query2",
      "details": {
        "label": "FASTQ sequence library 2",
        "showAttribute": false
      },
      "semantics": {
        "minCardinality": 1,
        "ontology": [
          "http://sswapmeet.sswap.info/util/Sequence"
        ],
        "fileTypes": [
          "fastq-0"
        ]
      },
      "value": {
        "default": "",
        "visible": true,
        "required": false,
        "order":2
      }
    }
  ],
  "parameters": [
    {
      "id": "mate_inner_dist",
      "details": {
        "label": "Mate inner distance",
        "showAttribute": false
      },
      "semantics": {
        "ontology": [
          "xs:integer"
        ]
      },
      "value": {
        "default": 200,
        "type": "number",
        "required": false,
        "visible": true
      }
    },
    {
      "id": "segment_length",
      "details": {
        "label": "Segment length",
        "showAttribute": false
      },
      "semantics": {
        "ontology": [
          "xs:int"
        ]
      },
      "value": {
        "default": 25,
        "type": "number",
        "required": true,
        "visible": true
      }
    },
    {
      "id": "mate_std_dev",
      "details": {
        "label": "Mate distance stdev",
        "showAttribute": false
      },
      "semantics": {
        "ontology": [
          "xs:integer"
        ]
      },
      "value": {
        "default": 20,
        "type": "number",
        "required": false,
        "visible": true
      }
    },
    {
      "id": "max_intron_length",
      "details": {
        "label": "Maximum intron length",
        "showAttribute": false
      },
      "semantics": {
        "ontology": [
          "xs:integer"
        ]
      },
      "value": {
        "default": 50000,
        "type": "number",
        "required": true,
        "visible": true
      }
    },
    {
      "id": "min_isoform_fraction",
      "details": {
        "label": "Minimum isoform fraction",
        "showAttribute": false
      },
      "semantics": {
        "ontology": [
          "xs:float"
        ]
      },
      "value": {
        "default": 0.15,
        "type": "number",
        "required": true,
        "visible": true
      }
    },
    {
      "id": "bowtie_version",
      "details": {
        "label": "Bowtie version",
        "showAttribute": false
      },
      "semantics": {
        "ontology": [
          "xs:int"
        ]
      },
      "value": {
        "default": 2,
        "type": "number",
        "validator": "[1|2]",
        "visible": true,
        "required": false
      }
    },
    {
      "id": "splice_mismatches",
      "details": {
        "label": "Splice mismatches tolerated",
        "showAttribute": false
      },
      "semantics": {
        "ontology": [
          "xs:integer"
        ]
      },
      "value": {
        "default": 0,
        "type": "number",
        "required": true,
        "visible": true
      }
    },
    {
      "id": "read_mismatches",
      "details": {
        "label": "Final read alignments having more than these many mismatches are discarded",
        "showAttribute": false
      },
      "semantics": {
        "ontology": [
          "xs:int"
        ]
      },
      "value": {
        "default": 2,
        "type": "number",
        "required": true,
        "visible": true
      }
    },
    {
      "id": "min_intron_length",
      "details": {
        "label": "Minimum intron length",
        "showAttribute": false
      },
      "semantics": {
        "ontology": [
          "xs:integer"
        ]
      },
      "value": {
        "default": 70,
        "type": "number",
        "required": true,
        "visible": true
      }
    },
    {
      "id": "min_anchor_length",
      "details": {
        "label": "Minimum anchor length",
        "showAttribute": false
      },
      "semantics": {
        "ontology": [
          "xs:integer"
        ]
      },
      "value": {
        "default": 8,
        "type": "number",
        "required": true,
        "visible": true
      }
    },
    {
      "id": "max_insertion_length",
      "details": {
        "label": "Maximum insertion length",
        "showAttribute": false
      },
      "semantics": {
        "ontology": [
          "xs:integer"
        ]
      },
      "value": {
        "default": 3,
        "type": "number",
        "required": true,
        "visible": true
      }
    },
    {
      "id": "library_type",
      "details": {
        "label": "Library type",
        "description": "fr-unstranded|fr-firststrand|fr-unstranded",
        "showAttribute": false
      },
      "semantics": {
        "ontology": [
          "xs:int"
        ]
      },
      "value": {
        "default": "fr-unstranded",
        "type": "string",
        "required": true,
        "visible": true
      }
    },
    {
      "id": "jobName",
      "details": {
        "label": "Job name",
        "description": "The name of the itinerant Tophat job",
        "showAttribute": false
      },
      "semantics": {
        "ontology": [
          "xs:string"
        ]
      },
      "value": {
        "default": "tophat",
        "type": "string",
        "required": true,
        "visible": true
      }
    },
    {
      "id": "max_multihits",
      "details": {
        "label": "Maxium multiple hits to genome",
        "showAttribute": false
      },
      "semantics": {
        "ontology": [
          "xs:float"
        ]
      },
      "value": {
        "default": 20,
        "type": "number",
        "required": true,
        "visible": true
      }
    },
    {
      "id": "max_deletion_length",
      "details": {
        "label": "Maximum deletion length",
        "showAttribute": false
      },
      "semantics": {
        "ontology": [
          "xs:integer"
        ]
      },
      "value": {
        "default": 3,
        "type": "number",
        "required": true,
        "visible": true
      }
    },{
            "id": "no_novel_juncs",
            "value": {
                "default": false,
                "type": "bool",
                "visible": true,
                "required": false
            },
            "details": {
                "label": "Don't find novel junctions",
                "description": "Tells TopHat to look only for reads across junctions indicated in the supplied GFF."
            },
            "semantics": {
                "ontology": [
                    "xs:boolean"
                ]
            }
        }
  ],
  "checkpointable": false
}
